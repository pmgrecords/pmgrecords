{
  "paths": {
    "src": {
      "jade": "src/templates/**/*.jade",
      "sass": "src/css/**/*.scss",
      "images": "src/images/**",
      "bower": "bower_components/",
      "js": "src/js/**/*.js",
      "fonts": "src/fonts/**/*",
      "php": "src/php/**/*"
    },
    "dist": {
      "all": "dist/**/*",
      "html": "dist/",
      "css": "dist/css/",
      "js": "dist/js/",
      "images": "dist/images",
      "bower": "dist/bower_components/",
      "fonts": "dist/fonts/",
      "index": "dist/index.html"
    }
  }
}