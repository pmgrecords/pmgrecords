.edit-videos(ng-controller='VideosController as videos')
    .form-horizontal
        .row
            button.btn.btn-warning(type='button', ng-click='videos.add()') Add
        .record.row(ng-repeat='video in videos.videos')
            .form-group
                label.control-label.col-sm-2 Order
                .col-sm-2
                    input.form-control(type='text', ng-model='videos.videos[$index].order')
                label.control-label.col-sm-2 URL
                .col-sm-5
                    input.form-control(type='text', ng-model='videos.videos[$index].url')
            .form-group
                .text-center
                    iframe.youtube-player(ng-src='{{ videos.videos[$index].url | trusted }}', allowfullscreen, frameborder='0')
            .form-group
                .col-sm-offset-2.col-sm-8
                    button.btn.btn-danger(type='button', ng-click='videos.remove(video)') Delete